@model LoginViewModel

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet">
    <title>Giriş Yap</title>
    <style>
        body {
            margin: 0;
            padding: 0;
            height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
            background: linear-gradient(135deg, #6a11cb, #2575fc);
            font-family: Arial, sans-serif;
        }

        .container {
            display: flex;
            width: 90%;
            max-width: 1000px;
            height: 80vh;
            border-radius: 15px;
            box-shadow: 0px 8px 30px rgba(0, 0, 0, 0.3);
            overflow: hidden;
            background: #fff;
            padding: 0;
        }

        .welcome-section {
            background: linear-gradient(135deg, #6a11cb, #2575fc);
            color: #fff;
            width: 50%;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            padding: 50px;
            text-align: center;
        }

        .welcome-section h1 {
            font-size: 3.5rem;
            margin-bottom: 20px;
        }

        .welcome-section p {
            font-size: 1.2rem;
            margin-bottom: 30px;
        }

        .welcome-section button {
            background: #fff;
            color: #6a11cb;
            border: none;
            padding: 15px 30px;
            font-size: 1.2rem;
            border-radius: 25px;
            cursor: pointer;
            transition: background 0.3s ease, color 0.3s ease;
        }

        .welcome-section button:hover {
            background: rgba(255, 255, 255, 0.8);
            color: #2575fc;
        }

        .login-form {
            background: #fff;
            width: 50%;
            padding: 50px;
            display: flex;
            flex-direction: column;
            justify-content: center;
        }

        .login-form h2 {
            text-align: center;
            margin-bottom: 30px;
            font-size: 2rem;
        }

        .form-control {
            margin-bottom: 20px;
            padding: 15px;
            font-size: 1rem;
        }

        .btn-primary {
            background: #6a11cb;
            border: none;
            width: 100%;
            padding: 15px;
            font-size: 1.2rem;
            transition: background 0.3s ease;
        }

        .btn-primary:hover {
            background: #2575fc;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="welcome-section">
            <h1>Merhabalar!</h1>
            <p>Markedia'ya Hoş Geldin. Hesabın yoksa aşağıdan kolay bir şekilde üye olabilirsin.</p>
            <button>
                <a href="/Register/Index" style="text-decoration: none; color: inherit;">Kayıt Ol</a>
            </button>
        </div>
        <div class="login-form">
            <h2>Giriş Yap</h2>
            <form asp-action="Index" asp-controller="Login" method="post">
                <input type="text" asp-for="Username" class="form-control" placeholder="Kullanıcı Adı">
                <span asp-validation-for="Username" class="text-danger"></span>

                <input type="password" asp-for="Password" class="form-control" placeholder="Şifre">
                <span asp-validation-for="Password" class="text-danger"></span>

                <button type="submit" class="btn btn-primary">Giriş Yap</button>
            </form>
            <br />
            <div class="text-danger" asp-validation-summary="All" role="alert"></div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

